{
  "name": "alloyai",
  "publisher": "aditya-anand",
  "displayName": "Alloy AI",
  "description": "Debugging made easy",
  "icon": "media/logo.png",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Debuggers",
    "AI",
    "Formatters",
    "Testing"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Adiii1436/alloy.git"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-programmer-sidebar",
          "title": "Alloy AI",
          "icon": "media/logo_128.svg"
        }
      ]
    },
    "views": {
      "ai-programmer-sidebar": [
        {
          "type": "webview",
          "id": "agentChat.chatView",
          "name": "DEBUG NOW",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "commands": [
      {
        "command": "alloyai.fixError",
        "title": "Alloy: Fix Error"
      },
      {
        "command": "alloyai.explainCode",
        "title": "Alloy: Explain Code"
      },
      {
        "command": "alloyai.resetSettings",
        "title": "Alloy: Reset Settings"
      },
      {
        "command": "alloyai.manageIgnores",
        "title": "Alloy: Manage Ignore List"
      },
      {
        "command": "alloyai.openChat",
        "title": "Alloy: Open Debug Chat"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "glob": "^13.0.0",
    "minimatch": "^10.1.1",
    "openai": "^6.15.0"
  }
}